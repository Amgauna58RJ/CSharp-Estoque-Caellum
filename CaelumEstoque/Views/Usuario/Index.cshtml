
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>

        <div class="jumbotron">
            <h2>
                Cadastro de Usuario
            </h2>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <form role="form">
                            <div class="form-group">

                                <label for="nomeUsuario">
                                    Nome de usuário
                                </label>
                                <br />
                                <input type="text" class="form-control" id="nomeUsuario" style="border-radius: 35px 50px 50px 50px; height:25px;" />
                            </div>
                            <br />
                            <div class="form-group">

                                <label for="senha">
                                    Senha
                                </label>
                                <br />
                                <input type="password" class="form-control" id="senha" style="border-radius: 35px 50px 50px 50px; height:25px;" />
                                <br />
                                <label for="senha">
                                    Confirmação de senha
                                </label>
                                <br />
                                <input type="password" class="form-control" id="confirmacaoSenha" style="border-radius: 35px 50px 50px 50px; height:25px;" />
                            </div>


                        </form>

                    </div>
                </div>
            </div>
        </div>

    </div>
    <br />
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="btn-group" role="group">

                    <button class="btn btn-secondary" type="button">
                        @Html.ActionLink("Cadastrar", "Form", "Produto", null, new { style = "text-decoration:none;" })
                    </button>
                    <br />
                    <button style="margin-top: 10px;">
                        @Html.ActionLink("Página Inicial", "Index", "Home", null, new { style = "text-decoration:none;" })
                    </button>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
